<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="shortcut icon" href="/images/ico.jpg">
  <link rel="stylesheet" href="/css/style.css" />
  <title>Carreras</title>
  <link rel="stylesheet" href="/css/tabla.css">

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://cdn.datatables.net/2.0.3/css/dataTables.bootstrap5.css" />
  <link rel="stylesheet" href="https://cdn.datatables.net/responsive/3.0.1/css/responsive.bootstrap5.css" />
</head>

<body>

  <%- include('../nav') %>

    <div class="container1">
      <table id="example" class="table table-striped nowrap" style="width: 100%">
        <thead>
          <tr>
            <th data-priority="1">ID</th>
            <th data-priority="1">TITULO</th>
            <th data-priority="1">IMAGEN</th>
          </tr>
        </thead>
        <tbody>
          <% courses.forEach(course=> { %>
            <tr>
              <td>
                <%= course.id %>
              </td>
              <td>
                <%= course.title %>
              </td>
              <td><img src="<%= course.image_path %>" alt="<%= course.title %>" width="100"></td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>

    <!-- Link dataTable -->
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.3/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.0.3/js/dataTables.bootstrap5.js"></script>
    <script src="https://cdn.datatables.net/responsive/3.0.1/js/dataTables.responsive.js"></script>
    <script src="https://cdn.datatables.net/responsive/3.0.1/js/responsive.bootstrap5.js"></script>

    <!-- Codigo dataTable -->
    <script src="/js/table.js"></script>
</body>

</html>